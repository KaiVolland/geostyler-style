{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2022",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "target": "ES2022",
    "lib": ["ES2022", "es6", "dom"],
    "sourceMap": true,
    "inlineSources": true,
    "allowJs": false,
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true
  },
  "files": [
    "./typeguards.ts",
    "./index.ts"
  ]
}
